<Window x:Class="FitnessReservatie.UI.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessReservatie.UI"
        mc:Ignorable="d"
        Title="My Admin Panel" Height="500" Width="1000">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE9A500" Offset="0.557"/>
                <GradientStop Color="#FFF3CA00" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Name="LabelWelkomAdmin" Content="Logged-in as : " HorizontalAlignment="Left" Height="40" Margin="15,15,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Unispace" FontSize="24"/>
    </Grid>
</Window>
